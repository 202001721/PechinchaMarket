@model IEnumerable<Tuple<PechinchaMarket.Models.Comerciante, PechinchaMarket.Areas.Identity.Data.PechinchaMarketUser>>


@{
    ViewData["Title"] = "NonAprovedProducts";
}
<link href="~/css/manager.css" rel="stylesheet" />


<h2>Produtos pendentes para aprovação: </h2>



<body>
    <section class="container">


        @foreach (var item in Model)
        {
            @if (item.Item1.isApproved == false)
            {
                <div class="card">

                    <div class="card-image"><a href="#"> Imagem</a> </div>
                    <h2>@Html.DisplayFor(modelItem => item.Item2.UserName)</h2>
                    <p>Marca: @Html.DisplayFor(modelItem => item.Item2.Email)</p>
                    <a asp-area="" asp-controller="Manager" asp-action="DetailsProduct" asp-route-id="@item.Item1.Id"> Details</a>
                </div>

            }


        }

    </section>

</body>