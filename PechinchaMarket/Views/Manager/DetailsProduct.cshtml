@using System.Drawing
@model IEnumerable<Tuple<PechinchaMarket.Models.Produto, PechinchaMarket.Models.ProdutoLoja>>

@{
    ViewData["Title"] = "Detalhe do Produto";
}
<link href="~/css/produto.css" rel="stylesheet" />
<link href="~/css/produtoDetalhe.css" rel="stylesheet" />

<a class="back" onclick="goBack()"></a>
<h2>Detalhes do Produto</h2>

<div class="content small-padding-top">
    <dl class="row">
        <div class="addProductLeft">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Name):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstOrDefault().Item1.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Brand):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstOrDefault().Item1.Brand)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item2.Price):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstOrDefault().Item2.Price)€/@Html.DisplayFor(model => model.FirstOrDefault().Item1.Unidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Weight):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstOrDefault().Item1.Weight)Kg
            </dd>        
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.ProdCategoria):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstOrDefault().Item1.ProdCategoria)
            </dd>
        </div>
        <div class="addProductRight">
            <dd class="col-sm-10">

                <span class="imagem-produto" style="background-image: url('@Url.Action("ShowImage", "Manager", new { id = @Model.FirstOrDefault().Item1.Id})');">  </span>

            </dd>
        </div>        
    </dl>

    <div class="buttons-form">
        <form asp-action="ApproveProduct">
            <input name="id" type="hidden" asp-for="@Model.FirstOrDefault().Item1.Id " />
            <input type="submit" value="Aceitar" class="approve-button" />
        </form>
        <form asp-action="ReproveProduct">
            <input name="id" type="hidden" asp-for="@Model.FirstOrDefault().Item1.Id" />
            <input type="submit" value="Recusar" class="reprove-button" />
        </form>
    </div>
</div>