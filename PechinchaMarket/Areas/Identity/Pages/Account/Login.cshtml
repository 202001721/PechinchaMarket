@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<body class="gradianteLaranja">
<div class="row">
    <div class="box">
       <section>
            <div class="right">
                    <a class="orange" asp-area="" asp-controller="Authentication" asp-action="AuthenticationSupport" asp-route-section="1">Precisa de ajuda?</a>
            </div>  
            <div class="center">
                <img src="~/images/logo_projeto.png" alt="logo" class="image"></img>
                <h2>@ViewData["Title"]</h2>
                <br />
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <br
                    <p>Ainda não tem conta?
                        <a class="orange" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crie conta aqui</a>
                    </p>
                </div>
                <div class="right">
                    <br />
                    <br />
                    <button id="back" type="" class="botaocinza">Back</button>
                    <button id="login-submit" type="submit" class="botaoLaranja">Login</button>
                </div>
            </form>
        </section>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
